<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".FrontpageActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="10dp"
        android:text="Choose option below to\nGet Started!"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <GridLayout
            android:id="@+id/grid_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:orientation="vertical"
            android:layout_marginTop="100dp"
            android:paddingBottom="30dp"
            android:rowCount="4">


            <android.support.v7.widget.CardView
                android:id="@+id/babysitter"
                android:layout_width="133dp"
                android:layout_height="133dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                android:clickable="true"
                android:onClick = "onBabysitter"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:baselineAligned="false"
                        android:padding="10dp"
                        android:src="@drawable/ic_babysitter" />

                    <TextView
                        android:layout_width="133dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="Babysitter"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="italic" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="133dp"
                android:layout_height="133dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:onClick="onCarpenter">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"

                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:src="@drawable/ic_carpenter"

                        />

                    <TextView
                        android:layout_width="133dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="Carpenter"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="italic" />


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="133dp"
                android:layout_height="133dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:onClick="onElectrician">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:src="@drawable/ic_electrician"

                        />

                    <TextView
                        android:layout_width="133dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="Electrician"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="italic" />


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="133dp"
                android:layout_height="133dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:onClick="onBeautician">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"

                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:src="@drawable/ic_makeup"

                        />

                    <TextView
                        android:layout_width="133dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="Beautician"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="italic" />


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="133dp"
                android:layout_height="133dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:onClick="onMaid">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:src="@drawable/ic_maid"

                        />

                    <TextView
                        android:layout_width="133dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="Maid"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="italic" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="133dp"
                android:layout_height="133dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:onClick="onPlumber">

                    <ImageView
                        android:layout_width="100dp"

                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:src="@drawable/ic_plumber"

                        />

                    <TextView
                        android:layout_width="133dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="Plumber"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="italic" />


                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="133dp"
                android:layout_height="133dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:onClick="onPhotographer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"

                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:src="@drawable/ic_photographer"

                        />

                    <TextView
                        android:layout_width="133dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="Photographer"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="italic" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="133dp"
                android:layout_height="133dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:onClick="onBarber">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"

                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:src="@drawable/ic_barber" />

                    <TextView
                        android:layout_width="133dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="Barber"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="italic" />


                </LinearLayout>
            </android.support.v7.widget.CardView>


        </GridLayout>

    </ScrollView>

</LinearLayout>